RewriteEngine On

# Force lowercase API calls to match the correct case (API/Quotes instead of api/quotes)
RewriteCond %{REQUEST_URI} ^/api/(.*)$ [NC]
RewriteRule ^api/(.*)$ /API/$1 [R=301,L]

# Ensure proper routing for API requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^API/([^/]*)/?$ API/Quotes/$1 [NC,L]
