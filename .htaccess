RewriteEngine On

# Redirect /api/* to /API/* (force lowercase)
RewriteCond %{REQUEST_URI} ^/api/(.*)$ [NC]
RewriteRule ^api/(.*)$ /API/$1 [R=301,L]

# Ensure proper routing for API requests that aren't files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^API/([^/]*)/?$ API/Quotes/$1 [NC,L]
